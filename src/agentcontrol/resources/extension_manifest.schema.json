{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "agentcontrol://schemas/extension_manifest.schema.json",
  "title": "AgentControl Extension Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name",
    "version",
    "description",
    "entry_points",
    "compatibility"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 64,
      "pattern": "^[a-z0-9][a-z0-9_-]*$"
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:[-+][0-9A-Za-z.-]+)?$"
    },
    "description": {
      "type": "string",
      "minLength": 1,
      "maxLength": 512
    },
    "entry_points": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "playbooks",
        "hooks",
        "mcp"
      ],
      "properties": {
        "playbooks": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        },
        "hooks": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        },
        "mcp": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "uniqueItems": true
        }
      }
    },
    "compatibility": {
      "type": "object",
      "required": [
        "cli"
      ],
      "additionalProperties": false,
      "properties": {
        "cli": {
          "type": "string",
          "pattern": "^>=\\s*(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:[-+][0-9A-Za-z.-]+)?$"
        }
      }
    },
    "license": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128
    },
    "homepage": {
      "type": "string",
      "format": "uri"
    },
    "tags": {
      "type": "array",
      "maxItems": 16,
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 32
      },
      "uniqueItems": true
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
